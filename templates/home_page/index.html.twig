    //createChart('myChartBse', dataBse, 'BSE - Valeurs');
    createChart('myChartBst', dataBst, 'BST - Valeurs');
    createChart('myChartOrdreRoute', dataOrdreRoute, 'Ordre Route - Valeurs');
