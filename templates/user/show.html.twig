                    <p><i class="fas fa-heart"></i> Situation Familiale: {{ user.situationFamiliale }}</p>
                    <p><i class="fas fa-id-card"></i> CIN: {{ user.cin }}</p>
                    <p><i class="fas fa-"></i> Taux journalier: {{ user.tauxJournalier }} Ariary</p>
                    <p><i class="fas fa-"></i> Adresse: {{ user.address }}</p>
                    <p><i class="fas fa-"></i> Nombre d'enfant: {{ user.nombreEnfant }}</p>
                {% endif %}

                <p>
                    {% if user.sexe == 'femme' %}
                        <i class="fas fa-user"></i>{{ user.sexe }}
