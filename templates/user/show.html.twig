                {% if user.sexe == 'Femme' %}
                    <img src="{{asset('images/fprofile.png')}}" style="width: 200px;"/>
                {% elseif user.sexe == 'Homme' %}
                    <img src="{{asset('images/hprofile.png')}}" style="width: 200px;"/>
                {% endif %}
                    <h5><b>{{user.nom | upper}} {{user.prenom}} </b></h5>
