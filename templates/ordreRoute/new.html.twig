<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Acceuil</title>
    <link rel="stylesheet" href="{{ asset('assets/w3.css') }}">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="{{ asset('assets/bootstrap/bootstrap.min.css') }}" rel="stylesheet">
    <script src="{{ asset('assets/bootstrap/bootstrap.bundle.min.js') }}"></script><!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <style>
            *{
                box-sizing: border-box;
            }
            body{
                align-items: center;
                display: flex;
                flex-direction:column;
                background: #f6f5f7;
                font-family:'monserrat', sans-serif;
                min-height: 100%;
                margin: 5%;
            }
            a{
                text-decoration: none;
                color: grey;
            }
            body, h1, h2, h3, h4, h5, h6 {
                font-family: "Times New Roman", Times, serif;
            }
            .w3-display-container {
                position: relative;  /* Nécessaire pour que le bouton soit correctement positionné */
            }

            .w3-display-topright {
                position: absolute;
                top: 0;
                right: 0;
                z-index: 1000;  /* S'assurer que le bouton est au-dessus des autres éléments */
            }

            .fa-times {
                pointer-events: auto;  /* Assurez-vous que le bouton est cliquable */
            }

    </style>
</head>
<body>
    <div class=" w3-center w3-animate-zoom w3-half w3-card-4 w3-white">
        <div class="w3-display-container w3-yellow">
            <h1> SOMME depense {{ somme }}</h1>
            <h1> {{ total_credit }}</h1>
            <a href="{{path('bse_index')}}" class="fa fa-times w3-display-topright">
            </a>
            <h4  class="w3-opacity w3-padding-16"><i class="fa fa-user-plus w3-opacity"></i>    Créer Ordre de route</h4>
        </div>


    {% if somme < total_credit  %}

        {{ form_errors(nouveau_or) }}
        {{ form_start(nouveau_or) }}

            <!-- Fifth Row: Email and Password -->
            <div class="w3-row-padding w3-margin-bottom w3-opacity">
                <div class="w3-third">
                    {{ form_row(nouveau_or.matricule, { 'label': 'Numéro matricule', 'attr': {'class': 'w3-input w3-border'} }) }}
                </div>
                <div class="w3-third">
                    {{ form_row(nouveau_or.motif, { 'label': 'Motif', 'attr': {'class': 'w3-input w3-border'} }) }}
                </div>
                <div class="w3-third">
                    {{ form_row(nouveau_or.destination, { 'label': 'Destination','attr': {'class': 'w3-input w3-border'} }) }}
                </div>
            </div>


            <!-- Fifth Row: Email and Password -->
            <div class="w3-row-padding w3-margin-bottom w3-opacity">
                <div class="w3-third">
                    {{ form_row(nouveau_or.date_bse, { 'label': 'Date de création', 'attr': {'class': 'w3-input w3-border'} }) }}
                </div>
                <div class="w3-third">
                    {{ form_row(nouveau_or.lieu_bse, { 'label': 'Lieu de création','attr': {'class': 'w3-input w3-border'} }) }}
                </div>
                <div class="w3-third">
                    {{ form_row(nouveau_or.duree_mission, { 'label': 'Duree du mission','attr': {'class': 'w3-input w3-border'} }) }}
                </div>
            </div>


            <!-- Fifth Row: Email and Password -->
            <div class="w3-row-padding w3-margin-bottom w3-opacity">
                <div class="w3-third">
                    {{ form_row(nouveau_or.etat_validation_or, { 'label': 'Etat de validation','attr': {'class': 'w3-input w3-border'} }) }}
                </div>
                <div class="w3-third">
                    {{ form_row(nouveau_or.etat_payment_or, { 'label': 'Etat de payement','attr': {'class': 'w3-input w3-border'} }) }}
                </div>
                <div class="w3-third">
                    {{ form_row(nouveau_or.etat, { 'label': 'Type','attr': {'class': 'w3-input w3-border'} }) }}
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="w3-btn w3-indigo w3-half"><i class="fas fa-save"></i>  Créer</button>
            <input type="reset" class="w3-btn w3-red w3-half" value="Annuler">
        {{ form_end(nouveau_or) }}

    {% elseif somme >total_credit  %}
            <p>somme > total_credit </p>
    {% endif %}
</body>
