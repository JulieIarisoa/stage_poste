{% extends 'base.html.twig' %}

{% block body %}
    <h1>Employe</h1>
    <a href="{{ path('employe_new') }}">Create new employe</a>
    <ul>
        {% for employe in employe %}
            <li>
                <a href="{{ path('employe_show', {id: employe.id}) }}">{{ employe.nom }}</a>
                <a href="{{ path('employe_edit', {id: employe.id}) }}">Edit</a>
                <a href="{{ path('employe_delete', {id: employe.id}) }}">Delete</a>
            </li>
        {% endfor %}
    </ul>


    
    <input type="text" id="search" placeholder="Recherche par nom ou prénom" />
    <h2>Résultats :</h2>
    <ul id="results"></ul>

    <script>
        document.getElementById('search').addEventListener('input', function() {
            const query = this.value;

            fetch(`/employe/search?q=${encodeURIComponent(query)}`)
                .then(response => response.json())
                .then(data => {
                    const results = document.getElementById('results');
                    results.innerHTML = '';

                    if (data.length === 0) {
                        results.innerHTML = '<li>Aucun résultat trouvé</li>';
                    } else {
                        data.forEach(employe => {
                            const li = document.createElement('li');
                            li.textContent = `${employe.nom} ${employe.prenom}`;
                            results.appendChild(li);
                        });
                    }
                })
                .catch(error => console.error('Error:', error));
        });
    </script>
{% endblock %}
